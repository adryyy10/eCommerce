{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('shop') }}
{% endblock %}

{% block title %}Products{% endblock %}

{% block body %}
{{ parent() }}
<div class="container">
    <div class="item-profile">
        <div class="item-content" data-product-id="{{product.id}}">
            <h1>{{ product.name }}</h1>
            <p>{{ product.description }}</p>
            <div class="price">
                <h3>{{ product.price }} Â£</h3>
            </div>
            {% if app.user is defined and app.user.username is not null %}
                <div class="add-to-basket-button" id="add-to-basket" data-product-id="{{product.id}}">
                    Add to basket
                </div>
            {% endif %}
        </div>
    </div>
    </div>
</div>

{% endblock %}