{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('shop') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('basket') }}
{% endblock %}

{% block title %}Products{% endblock %}

{% block body %}
{{ parent() }}
<div class="container">
    <div class="main-template">
        <div class="item-profile">
            <div class="item-content" data-product-id="{{product.id}}">
                <h1>{{ product.name }}</h1>
                <p>{{ product.description }}</p>
                <div class="price">
                    <h3>{{ product.price }} Â£</h3>
                </div>
                {% if app.user is defined and app.user is not null %}
                    <input type="submit" value="Add to basket" class="add-to-basket-button" id="add-to-basket" data-product-id="{{product.id}}">
                {% endif %}
            </div>
        </div>
    </div>
    {% include 'shop/side-template.html.twig' with {'basket': (basket is defined and basket is not null) ? basket : null} only %}
</div>

{% endblock %}