{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('shop') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('shopJS') }}
{% endblock %}

{% block title %}Products{% endblock %}

{% block body %}
{{ parent() }}
<div class="container">
    <div class="listing">
        {% for product in products %}
            <div class="item">
                <div class="item-content" data-product-id="{{product.id}}">
                    <h3>{{ product.name }}</h3>
                    <p>{{ product.description }}</p>
                    <div class="price">
                        <label>{{ product.price }} Â£</label>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% if basket is defined and basket is not null %}
        <a href="/basket/{{basket.id}}" class="go-to-basket-button">
            Go to my basket
        </a>
    {% endif %}
</div>

{% endblock %}