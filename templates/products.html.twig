{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('listing') }}
{% endblock %}

{% block title %}Products{% endblock %}

{% block body %}

<div class="container">
  <div class="listing">
    {% for product in products %}
        <div class="item">
            <div class="item-content">
                <h3>{{ product.name }}</h3>
                <p>{{ product.description }}</p>
            </div>
        </div>
    {% endfor %}
  </div>
</div>

{% endblock %}